<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <android.support.constraint.Guideline
            android:id="@+id/vertical0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
            android:id="@+id/vertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0" />

    <android.support.constraint.Guideline
            android:id="@+id/horizontal0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
            android:id="@+id/horizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="1.0"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            app:cardUseCompatPadding="true"
            android:orientation="vertical"
            app:cardElevation="5dp"
            android:id="@+id/cardView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">

            <TextView
                    android:text="[Event Name]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/txt_eventName"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimaryDark"/>

            <View
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="35dp"
                    android:layout_height="3dp"
                    android:textAlignment="inherit"
                    android:foregroundGravity="left"
                    android:layout_marginBottom="7dp"
                    android:id="@+id/horizontalLineview2"
                    android:layout_weight="1"/>

            <TextView
                    android:text="@string/eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_eventDescription"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1">

                <TextView
                        android:text="[Location]"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_location"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="7"/>

                <TextView
                        android:text="[Date]"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_date"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>

                <TextView
                        android:text="[Time]"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_time"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <Button
                        android:text="ATTEND"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/btn_redbg"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/button2"
                        android:letterSpacing="0.1"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                <Button
                        android:text="SHARE"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_redbg"
                        android:layout_height="50dp"
                        android:id="@+id/button4"
                        android:letterSpacing="0.1"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>